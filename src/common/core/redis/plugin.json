{
  "id": "redis",
  "name": {
    "en": "Redis",
    "fr": "Redis"
  },
  "description": {
    "en": "Redis server configuration when using BunkerWeb in cluster mode.",
    "fr": "Configuration du serveur Redis lorsque BunkerWeb est utilisé en mode cluster."
  },
  "version": "1.0",
  "stream": "yes",
  "settings": {
    "USE_REDIS": {
      "context": "global",
      "default": "no",
      "help": {
        "en": "Activate Redis.",
        "fr": "Activer Redis."
      },
      "id": "use-redis",
      "label": {
        "en": "Activate Redis",
        "fr": "Activer Redis"
      },
      "regex": "^(yes|no)$",
      "type": "check"
    },
    "REDIS_HOST": {
      "context": "global",
      "default": "",
      "help": {
        "en": "Redis server IP or hostname.",
        "fr": "IP ou nom d'hôte du serveur Redis."
      },
      "id": "redis-host",
      "label": {
        "en": "Redis server",
        "fr": "Serveur Redis"
      },
      "regex": "^((?!-)[a-zA-Z0-9\\-]{1,63}(.[a-zA-Z]{2,})+|(\\b25[0-5]|\\b2[0-4]\\d|\\b[01]?\\d\\d?)(\\.(25[0-5]|2[0-4]\\d|[01]?\\d\\d?)){3}|(([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,7}:|([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2}|([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3}|([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4}|([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5}|[0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6})|:((:[0-9a-fA-F]{1,4}){1,7}|:)|fe80:(:[0-9a-fA-F]Z{0,4}){0,4}%[0-9a-zA-Z]+|::(ffff(:0{1,4})?:)?((25[0-5]|(2[0-4]|1?\\d)?\\d)\\.){3}(25[0-5]|(2[0-4]|1?\\d)?\\d)|([0-9a-fA-F]{1,4}:){1,4}:((25[0-5]|(2[0-4]|1?\\d)?\\d)\\.){3}(25[0-5]|(2[0-4]|1?\\d)?\\d)))?$",
      "type": "text"
    },
    "REDIS_PORT": {
      "context": "global",
      "default": "6379",
      "help": {
        "en": "Redis server port.",
        "fr": "Port du serveur Redis."
      },
      "id": "redis-port",
      "label": {
        "en": "Redis port",
        "fr": "Port Redis"
      },
      "regex": "^[0-9]+$",
      "type": "text"
    },
    "REDIS_DATABASE": {
      "context": "global",
      "default": "0",
      "help": {
        "en": "Redis database number.",
        "fr": "Nombre de base de données Redis"
      },
      "id": "redis-database",
      "label": {
        "en": "Redis database",
        "fr": "Base de données Redis"
      },
      "regex": "^[0-9]+$",
      "type": "text"
    },
    "REDIS_SSL": {
      "context": "global",
      "default": "no",
      "help": {
        "en": "Use SSL/TLS connection with Redis server.",
        "fr": "Utiliser une connexion SSL/TLS avec le serveur Redis."
      },
      "id": "redis-ssl",
      "label": {
        "en": "Redis SSL/TLS",
        "fr": "Redis SSL/TLS"
      },
      "regex": "^(yes|no)$",
      "type": "check"
    },
    "REDIS_SSL_VERIFY": {
      "context": "global",
      "default": "no",
      "help": "Verify the certificate of Redis server.",
      "id": "redis-ssl-verify",
      "label": "Redis SSL/TLS verify",
      "regex": "^(yes|no)$",
      "type": "check"
    },
    "REDIS_TIMEOUT": {
      "context": "global",
      "default": "1000",
      "help": {
        "en": "Redis server timeout (in ms) for connect, read and write.",
        "fr": "Délai d'attente (en ms) du serveur Redis pour la connexion, la lecture et l'écriture."
      },
      "id": "redis-timeout",
      "label": {
        "en": "Redis timeout (ms)",
        "fr": "Délai d'attente Redis (ms)"
      },
      "regex": "^[0-9]+$",
      "type": "text"
    },
    "REDIS_KEEPALIVE_IDLE": {
      "context": "global",
      "default": "30000",
      "help": {
        "en": "Max idle time (in ms) before closing redis connection in the pool.",
        "fr": "Délai d'inactivité maximal (en ms) avant de fermer la connexion redis dans le pool."
      },
      "id": "redis-keepalive-idle",
      "label": {
        "en": "Redis keepalive idle (ms)",
        "fr": "Redis keepalive idle (ms)"
      },
      "regex": "^[0-9]+$",
      "type": "text"
    },
    "REDIS_KEEPALIVE_POOL": {
      "context": "global",
      "default": "10",
      "help": {
        "en": "Max number of redis connection(s) kept in the pool.",
        "fr": "Nombre maximal de connexion(s) redis conservée(s) dans le pool."
      },
      "id": "redis-keepalive-pool",
      "label": {
        "en": "Redis keepalive pool",
        "fr": "Redis keepalive pool"
      },
      "regex": "^[0-9]+$",
      "type": "text"
    },
    "REDIS_USERNAME": {
      "context": "global",
      "default": "",
      "help": "Redis username used in AUTH command.",
      "id": "redis-username",
      "label": "Redis username",
      "regex": "^.*$",
      "type": "text"
    },
    "REDIS_PASSWORD": {
      "context": "global",
      "default": "",
      "help": "Redis password used in AUTH command.",
      "id": "redis-password",
      "label": "Redis password",
      "regex": "^.*$",
      "type": "password"
    },
    "REDIS_SENTINEL_HOSTS": {
      "context": "global",
      "default": "",
      "help": "Redis sentinel hosts with format host:[port] separated with spaces.",
      "id": "redis-sentinel-hosts",
      "label": "Redis sentinel hosts",
      "regex": "^.*$",
      "type": "text"
    },
    "REDIS_SENTINEL_USERNAME": {
      "context": "global",
      "default": "",
      "help": "Redis sentinel username.",
      "id": "redis-sentinel-username",
      "label": "Redis sentinel username",
      "regex": "^.*$",
      "type": "text"
    },
    "REDIS_SENTINEL_PASSWORD": {
      "context": "global",
      "default": "",
      "help": "Redis sentinel password.",
      "id": "redis-sentinel-password",
      "label": "Redis sentinel password",
      "regex": "^.*$",
      "type": "password"
    },
    "REDIS_SENTINEL_MASTER": {
      "context": "global",
      "default": "",
      "help": "Redis sentinel master name.",
      "id": "redis-sentinel-master",
      "label": "Redis sentinel master",
      "regex": "^.*$",
      "type": "text"
    }
  }
}
